{
    "compilerOptions": {
        "target": "es6",
        "module": "esnext",
        "sourceMap": true,
        "outDir": "lib",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "moduleResolution": "node",
        "sourceRoot": "src",
        "lib": [
            "es2017",
            "dom",
            "esnext.asynciterable",
            "dom"
        ],
        "declaration": true
    },
    "exclude": [
        "node_modules",
        "lib",
        "__tests__"
    ],
    "include": [
        "src/"
    ]
}
